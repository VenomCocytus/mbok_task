{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=mbok_task;Username=postgres;Password=#Roxanne2004",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForDevelopment!",
    "Issuer": "TaskManagementAPI",
    "Audience": "TaskManagementAPI",
    "ExpiryInMinutes": 60
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "*/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/auth/register",
        "Period": "1m",
        "Limit": 3
      }
    ]
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "https://localhost:3000",
    "https://localhost:3001",
    "http://localhost:5173",
    "https://localhost:5173",
    "http://localhost:8080"
  ],
  "Jaeger": {
    "Enabled": false,
    "AgentHost": "localhost",
    "AgentPort": 6831
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341",
    "ApiKey": ""
  },
  "Features": {
    "EnableEmailNotifications": false,
    "EnableRealTimeNotifications": false,
    "EnableFileUploads": false,
    "MaxFileUploadSizeMB": 10
  }
}